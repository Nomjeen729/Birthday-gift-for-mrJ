    <div class="modal" id="modal">
        <div class="modal-content">
            <h2>Create New Folder</h2>
            <div class="form-group">
                <label for="folderName">Folder Name</label>
                <input type="text" id="folderName" placeholder="Enter folder name">
            </div>
            <div class="form-group">
                <label for="parentFolder">Parent Folder</label>
                <select id="parentFolder">
                    <option value="root">Root</option>
                    <option value="public">public</option>
                    <option value="src">src</option>
                </select>
            </div>
            <div class="modal-buttons">
                <button class="btn-secondary" onclick="closeModal()">Cancel</button>
                <button class="btn-primary" onclick="createFolder()">Create</button>
            </div>
        </div>
    </div>
    
    <script>
        function openModal() {
            document.getElementById('modal').style.display = 'flex';
        }
        
        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }
        
        function createFolder() {
            const folderName = document.getElementById('folderName').value;
            const parentFolder = document.getElementById('parentFolder').value;
            
            if (folderName) {
                alert(`Folder "${folderName}" created successfully in ${parentFolder}`);
                closeModal();
                
                // Clear input
                document.getElementById('folderName').value = '';
            } else {
                alert('Please enter a folder name');
            }
        }
        
        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('modal');
            if (event.target == modal) {
                closeModal();
            }
        }
        
        // Add click event to folders
        const folders = document.querySelectorAll('.folder');
        folders.forEach(folder => {
            folder.addEventListener('click', function() {
                folders.forEach(f => f.classList.remove('active'));
                this.classList.add('active');
                
                // Update path
                const pathElement = document.querySelector('.path');
                const folderName = this.querySelector('span:last-child').textContent;
                pathElement.textContent = `Home / ${folderName} /`;
            });
        });
    </script>
